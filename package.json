  "description": "> **Prototipo de software para la gestión automatizada de asistencias estudiantiles mediante códigos QR**",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "seed": "prisma db seed",
    "db:seed": "ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed.ts",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "db:clean": "ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/cleanup.ts",
    "postbuild": "next-sitemap",
    "postinstall": "prisma generate",
    "update": "ncu -u"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
